<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/area_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_input_layout"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/area"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/price_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/area_input_layout"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/price"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/rooms_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_input_layout"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/rooms"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/floor_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rooms_input_layout"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/floor"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/money_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/floor_input_layout"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:padding="7dp"
            android:visibility="gone"
            style="@style/button_confirm"
            android:layout_below="@id/money_input_layout"
            android:textColor="@color/black"/>


    </RelativeLayout>
</ScrollView>