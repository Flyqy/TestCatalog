<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="My.ProgressDialog" parent="@android:style/Theme.Holo.Light">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">5dp</item>
        <item name="contentPaddingTop">5dp</item>
        <item name="contentPaddingLeft">5dp</item>
        <item name="contentPaddingRight">5dp</item>
        <item name="cardBackgroundColor">@color/back_card</item>
    </style>

    <style name="button_confirm" parent="Base.Widget.AppCompat.Button">
        <item name="background">@color/colorPrimary</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>
